@article{Tindall2004,
abstract = {This study focuses upon the relationship between personal networks {\&} the participation of individuals in a social movement over time, a rarity in the social movement literature, which has mostly used cross-sectional designs to explore this topic. Objectives of the research include empirically documenting some of the mechanisms that underlie the effects of network ties on social movement participation, examining the explanatory power of an ego-network model of individual participation in social movements over time, {\&} examining whether network effects on activism are spurious, once past activism is controlled. Data were collected through two waves of a panel survey administered to members of 3 formal environmental organizations in Victoria, British Columbia, in 1992 {\&} 1998. These organizations were central to the British Columbia wilderness preservation movement. Multiple regression {\&} path analysis are utilized to examine the relative importance of network degree vs network range, as well as frequency of communication {\&} level of movement identification, for explaining level of social movement participation. Results show distinct effects of network degree, network range, communication, {\&} identification on level of activism. An additional finding is that network ({\&} network process) variables have effects on new activism that are independent of the effects of past activism. A theoretical discussion considers the implications of the stage of the cycle of protest {\&} biographical availability in influencing these processes. 4 Tables, 3 Figures, 44 References. Adapted from the source document.},
author = {Tindall, David B.},
doi = {10.1080/00380237.2004.10571240},
file = {:Users/adamhowe/Google Drive/Uni/Dissertation/Sources/ALL SOURCES/A{\_}2004{\_}Tindall{\_}Social Mvmnt Participation Over Time - Ego-Centric Microbobilization.pdf:pdf},
isbn = {0038-0237, 0038-0237},
issn = {21621128},
journal = {Sociological Focus},
number = {2},
pages = {163--184},
title = {{Social movement participation over time: An ego-network approach to micro-mobilization}},
volume = {37},
year = {2004}
}
