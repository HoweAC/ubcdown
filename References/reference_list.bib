issn = {2183-2439},
journal = {Media and Communication},
keywords = {communication,first nations,globalization,indigenous,native American,new media},
number = {2},
pages = {38},
title = {{Cultural Resiliency and the Rise of Indigenous Media}},
url = {http://www.cogitatiopress.com/ojs/index.php/mediaandcommunication/article/view/312},
volume = {4},
year = {2016}
